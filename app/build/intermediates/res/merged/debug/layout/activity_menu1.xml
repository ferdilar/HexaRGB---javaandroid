<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFF7">
    <TextView
        android:id="@+id/tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Decimal to Hexadecimal"
        android:gravity="center_horizontal"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RED"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_deci_red"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_red"
                android:layout_centerVertical="true"
                android:hint="0"
                android:textSize="20sp"
                android:inputType="number"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_hexa_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <SeekBar
            android:id="@+id/sb_red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GREEN"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="25dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_deci_green"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:hint="0"
                android:layout_toRightOf="@+id/tv_green"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_hexa_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <SeekBar
            android:id="@+id/sb_green"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="0"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tv_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BLUE"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
            <EditText
                android:id="@+id/et_deci_blue"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/tv_blue"
                android:layout_centerVertical="true"
                android:inputType="number"
                android:gravity="right"/>
            <TextView
                android:id="@+id/tv_hexa_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00"
                android:layout_marginRight="10dp"
                android:textSize="20sp"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <SeekBar
            android:id="@+id/sb_blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="255"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:progress="0"/>
        <ImageView
            android:id="@+id/iv_color"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#000"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_hexa"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="#000000"
            android:gravity="center"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/btn_reset"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="RESET"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="#FA8072"
            android:textColor="#ffffff"
            android:textSize="25sp"/>
    </LinearLayout>
    </ScrollView>
</LinearLayout>